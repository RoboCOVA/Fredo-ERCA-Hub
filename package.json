{
  "name": "fredo-erca-hub",
  "version": "1.0.0",
  "description": "Fredo ERCA Revenue Hub - Government monitoring dashboard for Ethiopian Revenue Authority",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=fredo-taxpos-db --local --ip 0.0.0.0 --port 3001",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name fredo-erca-hub",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply fredo-taxpos-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply fredo-taxpos-db",
    "clean-port": "fuser -k 3001/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3001/api/health"
  },
  "dependencies": {
    "hono": "^4.10.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251113.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "typescript": "^5.9.3",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
